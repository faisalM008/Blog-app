<%= form_with model: [@post, @post.comments.build] do |form| %>
    <p>
        <%= form.label :author %><br>
        <%= form.text_field :author %><br>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %><br>
    </p>
    <p>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public'%>
    <p>
    <p>
        <%=form.submit%>
    </p>

<%end%>