<%= render 'layouts/navigation' %>
<% if current_user %>
  Hello <%= current_user.email %>
<% end %>

<h1 align="center">Listing all articles</h1>

<% @posts.each do |post| %>
  <%unless post.archived?%>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="well well-lg">
    <div class="article-title">
     <%= link_to post.title, post_path(post) %>
    </div>
    <div class="article-body">
     <%= truncate(post.body, length: 100) %>
    </div>
    <div class="article-actions">
     <%= link_to "Edit", edit_post_path(post), class: "btn btn-xs btn-primary" %>
     <%= link_to "Delete", post_path(post), method: :delete, turbo_data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
   </div>
  </div>
 </div>
 <% end %>
<% end %>

