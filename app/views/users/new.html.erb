<%= render 'layouts/navigation' %>


<h1 align="center">Sign Up!</h1>
<div class="row">

  <%= form_for(@user, data: { turbo: false }, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :email %>
    </div>
    <div class="col-sm-6">
     <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :password %>
    </div>
    <div class="col-sm-6">
    <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Password" %>
    </div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :confirm_password %>
    </div>
    <div class="col-sm-6">
     <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-type Password", autofocus: true %>
    </div>
   </div>

   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= check_box_tag(:terms_of_service) %>
      <%= label_tag(:terms_of_service, "I have read the terms and conditions") %>
    </div>
  </div>


  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Register', class: 'btn btn-primary btn-large' %>
    </div>
    </div>
    <% end %>

    
 </div>

 

 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
    <% if notice %>
        <div class="alert alert-danger" role="alert">
        <%notice.each do |message| %>
          <ul>
          <li><%= message %></li>
          </ul>
        <%end%>
    </div>
    <%end%>
    </div></div>
</div>

